<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- In progress dialog -->
    <!-- 加载中Dialog -->
    <style name="SingleColorProgressDialog" parent="@android:style/Theme.Dialog">
        <!-- Frame -->
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Whether it appears above the activity -->
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- Translucent -->
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- No title -->
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- Background transparent -->
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/clTransparent</item>
        <!-- The activity in the back darkens -->
        <!-- 后面的activity变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>