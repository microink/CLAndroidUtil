<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- In progress dialog -->
    <!-- 加载中Dialog -->
    <style name="SingleColorProgressDialog" parent="@android:style/Theme.Dialog">
        <!-- Frame -->
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Whether it appears above the activity -->
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- Translucent -->
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- No title -->
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- Background transparent -->
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/clTransparent</item>
        <!-- The activity in the back darkens -->
        <!-- 后面的activity变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- BaseDialog -->
    <style name="CLBaseDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- BaseDialog 动画 从下部滑动进入-->
    <style name="CLBaseDialogAnimBottom" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/cl_dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/cl_dialog_bottom_exit</item>
    </style>

    <!-- BaseDialog 动画 从中间透明度淡入淡出-->
    <style name="CLBaseDialogAnimCenter" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/cl_dialog_center_enter</item>
        <item name="android:windowExitAnimation">@anim/cl_dialog_center_exit</item>
    </style>

    <style name="CLWebViewActivity" parent="Theme.AppCompat.NoActionBar">

    </style>
</resources>