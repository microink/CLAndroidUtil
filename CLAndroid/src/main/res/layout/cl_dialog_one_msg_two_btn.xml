<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cl_one_msg_two_btn_dialog_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tip_one_msg_two_btn_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="22dp"
            android:text=""
            android:textColor="#555555"
            android:textSize="14sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_msg_one_msg_two_btn_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="46dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:lineSpacingExtra="4dp"
            android:text=""
            android:textColor="#555555"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C74D4D4d" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel_one_msg_two_btn_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@null"
                android:text="@string/cl_dialog_cancel_text"
                android:textColor="#555555"
                android:textSize="14sp" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#C74D4D4d" />
            <Button
                android:id="@+id/btn_confirm_one_msg_two_btn_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@null"
                android:text="@string/cl_dialog_confirm_text"
                android:textColor="@color/clDialogConfirmTextColor"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>